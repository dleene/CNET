@model IEnumerable<OrderDetails>

@{
    ViewData["Title"] = "Order Details";
	decimal total = 0;
	decimal subtotal = 0;
}

<!DOCTYPE html>
    
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
	<title>Order Details</title>
</head>

<body>
	<h3>Order Details</h3>
    <table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Order Code</th>
            <th>UserName</th>
            <th>Product Name</th>
            <th>Product Price</th>
            <th>Quantity</th>
            <th>Subtotal</th>




        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
				subtotal = item.Price * item.Quantity;
				total += subtotal;
            <tr>
                <input type="hidden" asp-for="@item.OrderCode" class="getId" />
                <td>@item.Id</td>
                <th>@item.OrderCode</th>
                <td>@item.UserName</td>
                <td>@item.Product.Name</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>@subtotal.ToString("C")</td>
                
            </tr>

        }
        <tr>
            <th colspan="5">Total:</th>
				<td>@total.ToString("C")</td>
                <td>
                    <select class="form-control select-update-order">
						<option value="1">Đơn hàng mới</option>
                        <option value="0">Đã xử lý</option>

                </select>
                </td>
        </tr>
    </tbody>
	</table>
</body>

</html> 

@section Scripts{
	<script>
		$(document).ready(function () {
			$('.select-update-order').change(function () {
				var status = $(this).val();
                var odercode = $('.getId').val();
				// alert(status);
    //             alert(odercode);

				$.ajax({
					
					type: "POST",
                    url: "@Url.Action("UpdateOrder")",
					data: {
						status: status, ordercode: ordercode
					},
					success: function (result) {
                        if (result.success) {
							Swal.fire("Cập nhật đơn hàng thành công.");
						}
						else {
                            Swal.fire("Cập nhật đơn hàng thất bại." + result.message);
						}
					}
					
				});
			});
		});
	</script>
}
